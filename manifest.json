{
	"name": "Copyables",
	"version": "1.8",
	"manifest_version": 3,

	"description": "Makes the text/label of focused links copyable. Also via contextmenu.",
	"icons": {
		"128": "logo_128.png"
	},

	"permissions": ["activeTab", "contextMenus"],
	"background": {
		"service_worker": "copyables.sw.js"
	},

	"content_scripts": [
		{
			"all_frames": true,
			"run_at": "document_end",
			"js": ["copyables.content.js"],
			"matches": ["http://*/*", "https://*/*"]
		}
	]
}
